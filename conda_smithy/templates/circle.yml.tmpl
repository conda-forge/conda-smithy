version: 2

jobs:
{%- block env_test -%}
{%- if not configs %}
  build:
    working_directory: ~/test
    machine: true
    steps:
      - run:
          # The Circle-CI build should not be active, but if this is not true for some reason, do a fast finish.
          command: exit 0
{%- else %}
{%- for config, platform, config_docker_image in configs %}
  build_{{ config }}:
    working_directory: ~/test
{%- if platform.startswith('linux') %}
    machine: true
{%- else %}
    macos:
      xcode: "9.0"
{%- endif %}
    environment:
      - CONFIG: "{{ config }}"
    steps:
      - checkout
      - run:
          name: Fast finish outdated PRs and merge PRs
          command: |
            ./.circleci/fast_finish_ci_pr_build.sh
            ./.circleci/checkout_merge_commit.sh
{%- if platform.startswith('linux') %}
      - run:
          command: docker pull {{ config_docker_image }}
{%- endif %}
      - run:
          # Run, test and (if we have a BINSTAR_TOKEN) upload the distributions.
{%- if platform.startswith('linux') %}
          command: ./.circleci/run_docker_build.sh
{%- else %}
          command: ./.circleci/run_osx_build.sh
{%- endif %}
{%- if idle_timeout_minutes %}
          no_output_timeout: {{ idle_timeout_minutes }}m
{%- endif %}
{%- endfor -%}
{%- endif -%}
{%- endblock %}

workflows:
  version: 2
  build_and_test:
    jobs:
{%- block env_deps -%}
{%- if not configs %}
      - build:
          filters:
            branches:
              ignore:
                - /.*/
{%- else %}
{%- for config, _, _ in configs %}
      - build_{{ config }}
{%- endfor -%}
{%- endif -%}
{%- endblock %}
